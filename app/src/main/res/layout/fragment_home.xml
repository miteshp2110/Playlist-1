<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Recently Played Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECENTLY PLAYED"
                android:textSize="30sp"
                android:textColor="?attr/android:textColorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/bebas_neue"
                android:layout_marginBottom="12dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Recently played card 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#FFDDDD"
                        app:cardCornerRadius="6dp"
                        android:elevation="4dp"
                        android:radius="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/russian_bandana"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RUSSIAN BANDANA"
                                    android:textAlignment="center"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/bebas_neue"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DHANDA NYOLIWALA"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/bebas_neue"
                                    android:textColor="#666666"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Recently played card 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#FFDDDD"
                        app:cardCornerRadius="6dp"
                        android:elevation="4dp"
                        android:radius="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/sahiba"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SAHIBA"
                                    android:textAlignment="center"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/bebas_neue"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PRIYA SARAIYA, ADITYA SHARMA"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/bebas_neue"
                                    android:textColor="#666666"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Recently played card 3 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#FFDDDD"
                        app:cardCornerRadius="6dp"
                        android:elevation="4dp"
                        android:radius="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/nau_panchli"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9:45"
                                    android:textAlignment="center"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/bebas_neue"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PRABH SINGH"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/bebas_neue"
                                    android:textColor="#666666"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Recently played card 4 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFDDDD"
                        app:cardCornerRadius="6dp"
                        android:elevation="4dp"
                        android:radius="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/dil_sa_dil_tak"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DIL SE DIL TAK"
                                    android:textAlignment="center"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/bebas_neue"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AKASHDEEP SENGUPTA"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/bebas_neue"
                                    android:textColor="#666666"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Top Artists Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOP ARTISTS"
                android:textSize="30sp"
                android:textColor="?attr/android:textColorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/bebas_neue"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Artist 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/diljit_dosanjh"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DILJIT DOSANJH"
                            android:textSize="15sp"
                            android:fontFamily="@font/bebas_neue"
                            android:textColor="?attr/android:textColorPrimary"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Artist 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/post_malone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POST MALONE"
                            android:textSize="15sp"
                            android:fontFamily="@font/bebas_neue"
                            android:textColor="?attr/android:textColorPrimary"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Artist 3 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/argit_singh"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ARIJIT SINGH"
                            android:textSize="15sp"
                            android:fontFamily="@font/bebas_neue"
                            android:textColor="?attr/android:textColorPrimary"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Artist 4 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/darshan_raval"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DARSHAN RAVAL"
                            android:textSize="15sp"
                            android:fontFamily="@font/bebas_neue"
                            android:textColor="?attr/android:textColorPrimary"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Trending Songs Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRENDING SONGS"
                android:textSize="30sp"
                android:textColor="?attr/android:textColorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/bebas_neue"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Song 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:elevation="4dp"
                        android:radius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/i_like_me_better"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="I LIKE ME BETTER"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/bebas_neue"
                                android:textColor="?attr/android:textColorPrimary"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Song 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:elevation="4dp"
                        android:radius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sunflower" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SUNFLOWER"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/bebas_neue"
                                android:textColor="?attr/android:textColorPrimary"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Song 3 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:elevation="4dp"
                        android:radius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/born_to_shine"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BORN TO SHINE"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/bebas_neue"
                                android:textColor="?attr/android:textColorPrimary"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Favourites Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAVOURITES"
                    android:textSize="30sp"
                    android:textColor="?attr/android:textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="@font/bebas_neue"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_image"
                    android:columnCount="2"
                    android:rowCount="3">

                    <!-- First Card - Row 0, Column 0 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/pink2"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/mee"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="8dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RUSSIAN BANDANA"
                                    android:textSize="10sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DHANDA NYOLIWALA"
                                    android:textSize="8sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Second Card - Row 0, Column 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/pink2"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/mee"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="8dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RUSSIAN BANDANA"
                                    android:textSize="10sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DHANDA NYOLIWALA"
                                    android:textSize="8sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/pink2"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/mee"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="8dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RUSSIAN BANDANA"
                                    android:textSize="10sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DHANDA NYOLIWALA"
                                    android:textSize="8sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/pink2"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/mee"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="8dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RUSSIAN BANDANA"
                                    android:textSize="10sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DHANDA NYOLIWALA"
                                    android:textSize="8sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Currently Playing Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="80"
            android:progressTint="#000000"
            android:thumbTint="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mee"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADMIRIN' YOU (FT. PRESTON PABLO)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/bebas_neue"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KARAN AUJLA"
                    android:textSize="12sp"
                    android:fontFamily="@font/bebas_neue"
                    android:textColor="#666666"/>
            </LinearLayout>

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_play"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>