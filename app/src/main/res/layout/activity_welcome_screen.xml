<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimarySurface">

    <!-- EXPLORE -->
    <TextView
        android:id="@+id/exploreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXPLORE"
        android:fontFamily="@font/bebas_neue"
        android:textSize="80sp"
        android:textColor="?attr/android:textColorPrimary"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="32dp"
        android:paddingLeft="32dp"/>

    <!-- YOUR -->
    <TextView
        android:id="@+id/yourText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR"
        android:fontFamily="@font/bebas_neue"
        android:textSize="80sp"
        android:textColor="?attr/android:textColorPrimary"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exploreText"
        android:paddingLeft="32dp"/>

    <!-- WORLD OF -->
    <TextView
        android:id="@+id/worldOfText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WORLD OF"
        android:fontFamily="@font/bebas_neue"
        android:textSize="80sp"
        android:textColor="?attr/android:textColorPrimary"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yourText"
        android:paddingLeft="32dp"/>

    <!-- MUSIC! -->
    <TextView
        android:id="@+id/musicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUSIC!"
        android:fontFamily="@font/bebas_neue"
        android:textSize="80sp"
        android:textColor="?attr/android:textColorPrimary"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/worldOfText"
        android:paddingLeft="32dp"/>

    <!-- Music Note Icon -->
    <ImageView
        android:id="@+id/musicNote"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="200dp"
        android:paddingRight="30dp"
        android:src="@drawable/icon_musical_note"
        app:layout_constraintBottom_toBottomOf="@id/musicText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"/>

    <!-- Start Listening Button -->
    <Button
        android:id="@+id/startListeningBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="START LISTENING"
        android:fontFamily="@font/bebas_neue"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
